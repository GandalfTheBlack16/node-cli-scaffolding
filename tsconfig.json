{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "ESNext",
    "moduleResolution": "nodenext",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,                                     
    "skipLibCheck": true,                                
    "outDir": "./dist",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./test/**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true,
  },

}
